			</transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@192.168.21.15:1521:orcl" />
				<property name="username" value="xw_distr" />
				<property name="password" value="xw_distr" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/xwtech/mybatis/test/users.xml"/>
		<!-- <mapper resource="study/mybatis/main/department.xml"/> -->
	</mappers>
</configuration>