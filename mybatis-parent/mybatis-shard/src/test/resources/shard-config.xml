	<!-- 数据结点配置，main=true 代表该结点为主库（不参于分库的表，都存储在该节点中） -->
	<dataNodes>
		<dataNode main="true">
			<writeNodes>ds1</writeNodes>
			<readNodes>ds1-read</readNodes>
		</dataNode>
		<dataNode>
			<writeNodes>ds2</writeNodes>
			<readNodes>ds2-read</readNodes>
		</dataNode>
	</dataNodes>
	
	<!-- 配置需要分库的表，分库所依赖的字段  -->
	<rules>
		<table name="SHARD" column="SHARD_ID"></table>
	</rules>

