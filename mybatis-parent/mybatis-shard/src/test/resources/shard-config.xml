<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<keyNodes ref="ds2">
	</keyNodes>
	<!-- 数据结点配置，main=true 代表该结点为主库（不参于分库的表，都存储在该节点中） -->
	<dataNodes>
		<!-- 数据节点1 -->
		<dataNode main="true">
			<writeNodes ref="ds1,ds2">
			</writeNodes>
			<readNodes ref="ds1-read,ds2-read">
			</readNodes>
			<tables>SHARD2</tables>
		</dataNode>


		<!-- 数据节点2 -->
		<dataNode>
			<writeNodes ref="ds2">
				<tables></tables>
			</writeNodes>
			<readNodes ref="ds2-read">
				<tables></tables>
			</readNodes>
			<tables>SHARD</tables>
		</dataNode>
	</dataNodes>

	<!-- 配置需要分库的表，分库所依赖的字段 -->
	<!-- <rules> <table name="SHARD" column="SHARD_ID"></table> </rules> -->

</configuration>