<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sxj.supervisor.dao.contract.IContractReplenishBatchDao">
	<resultMap id="BaseResultMap" type="com.sxj.supervisor.entity.contract.ReplenishBatchEntity">
		<id property="id" column="ID" jdbcType="VARCHAR" />
		<result property="modifyId" column="MODIFY_ID" jdbcType="VARCHAR" />
		<result property="batchNo" column="BATCH_NO" jdbcType="VARCHAR" />
		<result property="rfidNo" column="RFID_NO" jdbcType="VARCHAR" />
		<result property="amount" column="AMOUNT" jdbcType="INTEGER" />
		<result property="batchItems" column="BATCH_ITEMS" jdbcType="VARCHAR" />
	</resultMap>

	<!-- 条件查询合同补损批次 -->
	<select id="queryBacths" resultMap="BaseResultMap"
		parameterType="String">
		<![CDATA[ SELECT ID,BATCH_NO,REPLENISH_ID,RFID_NO,AMOUNT,BATCH_ITEMS
		FROM M_CONTRACT_REPLENISH_BATCH WHERE REPLENISH_ID=#{condition.recordIds}]]>
	</select>
</mapper>