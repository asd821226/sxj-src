<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sxj.supervisor.dao.member.IAccountDao">
	<resultMap id="com.sxj.supervisor.dao.member.IAccountDao.AccountResultMap" type="com.sxj.supervisor.entity.member.AccountEntity">
		<id property="id" column="ID" jdbcType="VARCHAR" />
		<result property="parentId" column="PARENT_ID" jdbcType="VARCHAR" />
		<result property="accountName" column="ACCOUNT_NAME" jdbcType="VARCHAR" />
		<result property="name" column="NAME" jdbcType="VARCHAR" />
		<result property="state" column="STATE" jdbcType="INTEGER" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
		<result property="regDate" column="REG_DATE" jdbcType="TIMESTAMP" />
		<result property="password" column="PASSWORD" jdbcType="VARCHAR" />
		<result property="accountNo" column="ACCOUNT_NO" jdbcType="VARCHAR" />
		<result property="delstate" column="DEL_STATE" jdbcType="BOOLEAN" />
	</resultMap>

	<!-- 子账户高级查询 -->
	<select id="queryAccount" resultMap="AccountResultMap"
		parameterType="com.sxj.util.persistent.QueryCondition">
		<![CDATA[SELECT A.ID,A.PARENT_ID,A.ACCOUNT_NAME,A.NAME,
		A.STATE,A.REG_DATE,A.PASSWORD,A.ACCOUNT_NO 
		 FROM M_MEMBER_ACCOUNT A  WHERE 1=1 ]]>
		<if test="condition.parentId != null and condition.parentId != ''">
			<![CDATA[AND A.PARENT_ID LIKE CONCAT('%',#{condition.parentId},'%') ]]>
		</if>
		<if test="condition.name != null and condition.name != ''">
			<![CDATA[AND A.NAME LIKE CONCAT('%',#{condition.name},'%')]]>
		</if>
		<if test="condition.accountNo != null and condition.accountNo != ''">
			<![CDATA[AND A.ACCOUNT_NO LIKE CONCAT('%',#{condition.accountNo},'%') ]]>
		</if>
		<if test="condition.accountName != null and condition.accountName != ''">
			<![CDATA[AND A.ACCOUNT_NAME LIKE CONCAT('%',#{condition.accountName},'%')]]>
		</if>
		<if test="condition.state != null">
			<![CDATA[AND A.STATE = #{condition.state}]]>
		</if>
		<if test="condition.delstate != null ">
			<![CDATA[AND A.DEL_STATE = #{condition.delstate}]]>
		</if>
		<!-- 子会员注册时间段 -->
		<if test="condition.startDate != null and condition.endDate != null and condition.startDate != '' and condition.endDate != ''">
			<![CDATA[AND A.REG_DATE >=#{condition.startDate} AND A.REG_DATE <= #{condition.endDate}]]>
		</if>
		<![CDATA[ ORDER BY A.ACCOUNT_NO ASC]]>
	</select>
</mapper>